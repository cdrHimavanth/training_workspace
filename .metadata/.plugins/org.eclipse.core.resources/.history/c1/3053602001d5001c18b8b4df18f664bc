package com.service;

import com.model.Employee;

public class EmployeeWorks {
	public static Employee[] addEmployee(Employee[] emps,Employee emp) {
		int count = emps.length;
		Employee[] employees = new Employee[count];
		for(int i = 0;i<count;i++) {
			employees[i]=emps[i];
		}
		employees[count]=emp;
		return employees;
	}
	public static Employee[] removeEmployee(Employee[] emps,int empId) {
		int count = emps.length;
		Employee[] employees = new Employee[count-1];
		int j=0;
		for(int i = 0;i<count;i++) {
			if(employees[i].getEmpId()==empId) {
				//
			}else {
				employees[j]=emps[i];
				j++;
			}
		}
		return employees;
	}
	public static Employee[] updateEmployee(Employee[] emps,int empId) {
		int count = emps.length;
		Employee[] employees = new Employee[count-1];
		int j=0;
		for(int i = 0;i<count;i++) {
			if(employees[i].getEmpId()==empId) {
				//
			}else {
				employees[j]=emps[i];
				j++;
			}
		}
		return employees;
	}
	public static void readAllEmployees(Employee[] emps) {
		for(Employee emp:emps) {
			System.out.println("Name : "+emp.getEmpName()+"  Id : "+emp.getEmpId()+"   Salary  : "+emp.getSalary());
		}
	}
}
